{
  "compilerOptions": {
    "target": "es5",                        
    "module": "commonjs",                   
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],                          
    "allowJs": true,                  
    "jsx": "react",                
    "outDir": "./public",                   
    "removeComments": true,           
    "isolatedModules": true,             
    "strict": true,                      
    "useUnknownInCatchVariables": false,
    "moduleResolution": "node",       
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,             
    "skipLibCheck": true,                   
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src"
  ]
}